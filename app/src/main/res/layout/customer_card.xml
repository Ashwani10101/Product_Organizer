<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11:30 AM, 2-January-2020"
                android:textColor="#060825" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#060825" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_CustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/customer_person"
                android:drawablePadding="10dp"
                android:drawableTint="#01579B"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="Customer name"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_CustomerNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/customer_phone"
                android:drawablePadding="10dp"
                android:drawableTint="#5A5A5A"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:text="7827451344"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_CustomerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/customer_address"
            android:drawablePadding="10dp"
            android:drawableTint="#D32F2F"
            android:padding="1dp"
            android:text="Address : 24434, Z-Blo, Wack, Noida, Sector-,50,U.P.,INDIA, EARTH, SS - SUN, Omaga-con29981"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/textView_CustomerOrderDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#00FFFFFF"
                android:drawableStart="@drawable/customer_cancel_historyl"
                android:drawableTint="#FFC107"
                android:elevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="10dp"
                android:text="Deny"
                android:textAllCaps="false"
                android:textColor="#D1A520"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="#00FFFFFF"
                android:drawableStart="@drawable/drawer_done"
                android:drawableTint="#009688"
                android:elevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="10dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="#009688"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:elevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:tint="#9E9E9E"
                app:srcCompat="@drawable/customer_message" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:elevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                android:tint="#009688"
                app:srcCompat="@drawable/customer_phone" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>