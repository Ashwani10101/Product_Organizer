<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_CustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/customer_person"
            android:text="Customer ame"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_CustomerNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/customer_phone"
            android:text="7827451344"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_CustomerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/customer_address"
            android:text="Address : 24434, Z-Blo, Wack, Noida, Sector-,50,U.P.,INDIA, EARTH, SS - SUN, Omaga-con29981"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_CustomerOrdertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Type"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_CustomerOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order List" />
    </LinearLayout>
</androidx.cardview.widget.CardView>